<tal:block>
/* E-Democracy Page Layout */

/* Container/Background */
#gs-content-email-layout-container{
    background-color: #125882;
    padding: 2em 3%;
}

#toparea {
    height: auto;
    padding-bottom: 2em;
    background: none;
    border-bottom: none;
    color: #FFF;
}

#titlebar .site{
    margin-left: 0;
}

#bodyblock{
    padding: 0.625em 3%;
}

/* Indentation of notification content*/
#bodyblock>*>p,
#bodyblock>*>div,
#bodyblock>*>dl,
#bodyblock>*>ul,
#bodyblock>*>ol{
    padding-left: 3%;
    padding-right: 3%;
}

#bodyblock * h3,
#bodyblock * h4,
#bodyblock * h5,
#bodyblock * h6,
#bodyblock>*>blockquote{
    margin-left: 3%;
    margin-right: 3%;
}

/* The Footer */
#gs-content-layout-footer {
    background: #ffffff;
    height: auto;
    border-top: none;
    padding: 0 3% .5em; 
} 

#gs-content-layout-footer-content{
    border-top: 0.063em solid #3a91b5;
}

#gs-content-layout-footer a, 
#gs-content-layout-footer a:hover, 
#gs-content-layout-footer a:focus, 
#gs-content-layout-footer a:visited {
    text-decoration: none;
} 

</tal:block>
